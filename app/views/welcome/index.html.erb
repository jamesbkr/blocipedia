
  

    <div class="jumbotron text-center">
          <div class="row">
            <%= current_user.name %> welcome to your wiki page!!!!               
         
          </div>
    <div class="row"><% if current_user.member? %> <%= link_to "UPGRADE TO PREMIUM!!!", new_charge_path %> <% end %></div>
          <div class="row">
            <%= link_to "Create New Wiki",  new_wiki_path,  class: "btn btn-success" %> 
          </div>
          
    </div>
    <% if current_user.premium? || current_user.admin? %>
        <div class="col-md-4">
            <div class="text-center"><h3>Your Public Wikis</h3></div>
            <% @wikis.where(user: current_user).each do |wiki| %>
            <% if !wiki.private? %>
              <%= render ({ partial: 'wikis/wiki', locals: {wiki: wiki}}) %>
            <% end %>  
            <% end %>
        </div>    
         <div class="col-md-4">
            <div class="text-center"><h3>Your Private Wikis</h3></div>
            <% @wikis.where(user: current_user).each do |wiki| %>
            <% if wiki.private? %>
              <%= render ({ partial: 'wikis/wiki', locals: {wiki: wiki}}) %>
            <% end %>  
            <% end %>
        </div> 
             <div class="col-md-4">
            <div class="text-center"><h3>Your Collaborations</h3></div>
            <% @collaborations.each do |wiki| %>
           
              <%= render ({ partial: 'wikis/wiki', locals: {wiki: wiki.wiki}}) %>
              
            <% end %>
        </div> 
        <% end %>
        
        <% if current_user.member? %>
         <div class="col-md-6">
            <div class="text-center"><h3>Your Public Wikis</h3></div>
            <% @wikis.where(user: current_user).each do |wiki| %>
            <% if !wiki.private? %>
              <%= render ({ partial: 'wikis/wiki', locals: {wiki: wiki}}) %>
            <% end %>  
            
            <% end %>
            </div>
             <div class="col-md-4">
              <div class="text-center"><h3>Your Collaborations</h3></div>
            <% current_user.wikis.each do |wiki| %>
           
              <%= render ({ partial: 'wikis/wiki', locals: {wiki: wiki}}) %>
              
            <% end %>
            </div>
    <% end %>